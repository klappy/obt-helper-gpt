{
  "name": "obt-helper-gpt",
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "test": "vitest",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:integration:headed": "playwright test --headed",
    "test:integration:debug": "playwright test --debug",
    "test:whatsapp-sync": "node scripts/test-whatsapp-sync.js",
    "test:tool-update": "node scripts/test-tool-update.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:beta": "node scripts/version.js beta",
    "release": "npm run build && echo 'Ready for deployment'"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@sveltejs/adapter-netlify": "^4.1.0",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^4.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.8",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.8",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@netlify/blobs": "^8.2.0",
    "chart.js": "^4.5.0",
    "tiktoken": "^1.0.21",
    "twilio": "^5.7.3"
  },
  "type": "module"
}
